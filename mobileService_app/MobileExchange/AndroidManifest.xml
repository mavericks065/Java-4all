<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sss.helparound"
    android:versionCode="1"
    android:versionName="0.1" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sss.helparound.ui.LoginActivity"
            android:label="@string/app_name" >

            <!-- <intent-filter> -->
            <!-- <action android:name="android.intent.action.MAIN" /> -->
            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name="com.sss.helparound.ui.RegisterActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.sss.helparound.ui.SettingActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.sss.helparound.ui.CreateAdActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.sss.helparound.ui.SplashScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sss.helparound.ui.AdDescriptionActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.sss.helparound.ui.MyAdDescriptionActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.sss.helparound.ui.ListAdActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >

            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.sss.helparound.ui.MyAccountActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.sss.helparound.ui.ForgotPasswordActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>